{
  "name": "avif.io-next",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "npx stylelint styles/ --fix && prettier --write . && eslint . --ext .js --ext .tsx",
    "pull": "git pull && git fetch origin && git reset --hard origin/master",
    "develop": "npm run build && next export && cd conversion && npx cross-env NODE_ENV=production webpack && cd ../ && npm run dev",
    "develop-img": "cd utils && node sharp && cd ../ && npm run build && next export && cd conversion && npx cross-env NODE_ENV=production webpack && cd ../ && npm run dev",
    "release": "npm run build && next export && cd conversion && npx cross-env NODE_ENV=production webpack && cd ../ && next-sitemap --config next-sitemap.config.js && firebase deploy",
    "release-img": "cd utils && node sharp && cd ../ && npm run build && next export && cd conversion && npx cross-env NODE_ENV=production webpack && cd ../ && next-sitemap --config next-sitemap.config.js && firebase deploy"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^10.2.3",
    "jszip": "^3.5.0",
    "lodash": "^4.17.21",
    "next": "^10.2.3",
    "next-images": "^1.7.0",
    "next-sitemap": "^1.6.95",
    "pretty-bytes": "^5.6.0",
    "react": "^17.0.2",
    "react-compare-image": "^3.1.0",
    "react-dom": "^17.0.2",
    "react-dropzone": "^11.3.2",
    "react-schemaorg": "^1.3.1",
    "react-syntax-highlighter": "^15.4.3",
    "schema-dts": "^0.8.2"
  },
  "devDependencies": {
    "@types/jszip": "^3.4.1",
    "@types/lodash": "^4.14.170",
    "@types/node": "^15.6.1",
    "@types/pretty-bytes": "^5.2.0",
    "@types/react": "^17.0.8",
    "@types/react-dom": "^17.0.5",
    "@types/react-dropzone": "^5.1.0",
    "@types/react-syntax-highlighter": "^13.5.0",
    "@types/sharp": "^0.28.2",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.27.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "next-compose-plugins": "^2.2.1",
    "postcss": "^8.3.0",
    "prettier": "^2.3.0",
    "responsive-loader": "^2.3.0",
    "sharp": "^0.28.3",
    "stylelint": "^13.13.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.3.2",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.7.0"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.1"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "ignorePatterns": [
      "out/",
      ".next/",
      ".firebase/",
      "node_modules/"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended"
    ],
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "@typescript-eslint",
      "jsx-a11y"
    ],
    "rules": {
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "jsx-a11y/anchor-is-valid": "off",
      "react/react-in-jsx-scope": "off",
      "react/no-unescaped-entities": 0
    }
  },
  "prettier": {
    "printWidth": 100,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "jsxSingleQuote": false,
    "bracketSpacing": true
  },
  "stylelint": {
    "extends": "stylelint-config-rational-order",
    "rules": {
      "indentation": 2,
      "no-descending-specificity": null,
      "rule-empty-line-before": "always",
      "comment-empty-line-before": [
        "always",
        {
          "ignore": [
            "after-comment",
            "stylelint-commands"
          ]
        }
      ],
      "comment-no-empty": null,
      "font-family-no-duplicate-names": null,
      "value-list-comma-newline-after": null,
      "declaration-colon-newline-after": null
    },
    "ignoreFiles": [
      "node_modules/**/*.css"
    ]
  }
}
