{
  "name": "avif.io",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lintnext": "next lint",
    "lint": "npx stylelint styles/ --fix && prettier --write . && eslint . --ext .js --ext .tsx",
    "bundle":"ANALYZE=true npm run build",
    "pull": "git pull && git fetch origin && git reset --hard origin/master",
    "push": "git add . && git commit -m '.' && git push",
    "img": "cd utils && node sharp && cd ../",
    "develop": "npm run build && next export && cd conversion && npx cross-env NODE_ENV=production webpack && cd ../ && npm run dev",
    "release": "npm run build && next export && cd conversion && npx cross-env NODE_ENV=production webpack && cd ../ && next-sitemap --config next-sitemap.config.js && firebase deploy"
  },
  "dependencies": {
    "@next/bundle-analyzer": "^11.0.1",
    "jszip": "^3.5.0",
    "lodash": "^4.17.21",
    "next": "^11.0.1",
    "next-images": "^1.8.1",
    "next-sitemap": "^1.6.133",
    "pretty-bytes": "^5.6.0",
    "react": "^17.0.2",
    "react-compare-image": "^3.1.0",
    "react-dom": "^17.0.2",
    "react-dropzone": "^11.3.4",
    "react-schemaorg": "^1.3.3",
    "react-syntax-highlighter": "^15.4.3",
    "schema-dts": "^0.8.3"
  },
  "devDependencies": {
    "@types/jszip": "^3.4.1",
    "@types/lodash": "^4.14.171",
    "@types/node": "^15.14.2",
    "@types/pretty-bytes": "^5.2.0",
    "@types/react": "^17.0.14",
    "@types/react-dom": "^17.0.9",
    "@types/react-dropzone": "^5.1.0",
    "@types/react-syntax-highlighter": "^13.5.2",
    "@types/sharp": "^0.28.4",
    "@typescript-eslint/eslint-plugin": "^4.28.3",
    "@typescript-eslint/parser": "^4.28.3",
    "autoprefixer": "^10.3.1",
    "cross-env": "^7.0.3",
    "eslint": "7.28.0",
    "eslint-config-next": "11.0.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "next-compose-plugins": "^2.2.1",
    "postcss": "^8.3.5",
    "prettier": "^2.3.2",
    "responsive-loader": "^2.3.0",
    "sharp": "^0.28.3",
    "stylelint": "^13.13.1",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "tailwindcss": "^2.2.4",
    "typescript": "^4.3.5",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.7.2"
  },
  "optionalDependencies": {
    "fsevents": "^2.3.2"
  },
  "prettier": {
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "quoteProps": "consistent",
    "jsxSingleQuote": false,
    "bracketSpacing": true
  },
  "stylelint": {
    "extends": "stylelint-config-rational-order",
    "rules": {
      "indentation": 2,
      "property-no-unknown": null,
      "no-descending-specificity": null,
      "rule-empty-line-before": "always",
      "comment-empty-line-before": [
        "always",
        {
          "ignore": [
            "after-comment",
            "stylelint-commands"
          ]
        }
      ],
      "comment-no-empty": null,
      "font-family-no-duplicate-names": null,
      "value-list-comma-newline-after": null,
      "declaration-colon-newline-after": null
    },
    "ignoreFiles": [
      "node_modules/**/*.css"
    ]
  }
}
